{
  "name": "package-lock-parser",
  "version": "2.0.0",
  "description": "Library to more easily parse package-lock.json files",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/WhiteAutumn/package-lock-parser.git"
  },
  "engines": {
    "node": ">=12.20.0"
  },
  "files": [
    "dist"
  ],
  "main": "./dist/cjs/index.c.js",
  "module": "./dist/mjs/index.m.js",
  "exports": {
    ".": {
      "import": {
        "types":"./dist/mjs/index.m.d.ts",
        "default": "./dist/mjs/index.m.js"
      },
      "require": {
        "types": "./dist/cjs/index.c.d.ts",
        "default": "./dist/cjs/index.c.js"
      }
    }
  },
  "scripts": {
    "lint": "eslint . --color",
    "lint:fix": "eslint --fix . --color",
    "lint:strict": "eslint . --color --max-warnings=0",
    "typecheck": "tsc --noEmit",
    "test": "mocha --require @esbuild-kit/cjs-loader --colors 'src/**/*.ts'",
    "test:watch": "mocha --require @esbuild-kit/cjs-loader --colors --watch --reporter min 'src/**/*.ts'",
    "test:coverage": "tsc --incremental && c8 --all --src src mocha 'dist/test/**/*.test.js'",
    "build": "run-p build:*",
    "build:require": "tsc --project tsconfig.commonjs.json",
    "build:modules": "tsc --project tsconfig.esm.json",
    "postbuild": "node ./scripts/postbuild.mjs",
    "prepack": "npm run build"
  },
  "dependencies": {
    "exceptions-with-cause": "~2.1.0"
  },
  "devDependencies": {
    "@types/chai": "^4.0.0",
    "@types/mocha": "^9.0.0",
    "@types/node": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "c8": "^7.0.0",
    "chai": "^4.0.0",
    "eslint": "^8.0.0",
    "mocha": "^10.0.0",
    "npm-run-all": "^4.1.5",
    "pre-commit": "^1.0.0",
    "tsx": "^3.9.0",
    "typescript": "~4.7.0"
  },
  "pre-commit": [
    "lint",
    "typecheck",
    "test"
  ]
}
