{
  "name": "package-lock-parser",
  "version": "2.0.0",
  "description": "Library to more easily parse package-lock.json files",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/WhiteAutumn/package-lock-parser.git"
  },
  "engines": {
    "node": ">=12.20.0"
  },
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "lint:strict": "eslint . --max-warnings=0",
    "typecheck": "tsc --noEmit",
    "test": "mocha --require @esbuild-kit/cjs-loader  'src/**/*.ts'",
    "test:watch": "mocha --require @esbuild-kit/cjs-loader --watch --reporter min 'src/**/*.ts'",
    "test:coverage": "tsc --incremental && c8 --all --src src mocha 'dist/test/**/*.test.js'"
  },
  "dependencies": {
    "exceptions-with-cause": "~2.1.0"
  },
  "devDependencies": {
    "@types/chai": "^4.0.0",
    "@types/mocha": "^9.0.0",
    "@types/node": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "c8": "^7.0.0",
    "chai": "^4.0.0",
    "eslint": "^8.0.0",
    "mocha": "^10.0.0",
    "pre-commit": "^1.0.0",
    "tsx": "^3.9.0",
    "typescript": "~4.7.0"
  },
  "pre-commit": [
    "lint",
    "typecheck",
    "test"
  ]
}
